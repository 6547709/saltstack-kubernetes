# -*- coding: utf-8 -*-
# vim: ft=jinja

{#- Get the `tplroot` from `tpldir` #}
{% from tpldir ~ "/map.jinja" import proxyinjector with context %}
{%- set public_domain = pillar['public-domain'] -%}
{%- from "kubernetes/map.jinja" import common with context -%}
{%- if common.addons.get('nginx', {'enabled': False}).enabled %}
  {%- set controller = "nginx" -%}
{%- elif common.addons.get('traefik', {'enabled': False}).enabled %}
  {%- set controller = "traefik" -%}
{%- elif common.addons.get('istio', {'enabled': False}).enabled %}
  {%- set controller = "istio" -%}
{%- endif -%}

apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: kubehttpbin
  namespace: kubehttpbin
  annotations:
    kubernetes.io/ingress.class: {{ controller }}
    ingress.kubernetes.io/ssl-redirect: 'true'
    {%- if common.addons.get('nginx', {'enabled': False}).enabled %}
    cert-manager.io/cluster-issuer: letsencrypt-prod
    kubernetes.io/tls-acme: "true"
    nginx.ingress.kubernetes.io/force-ssl-redirect: "true"
    {%- endif %}
spec:
  rules:
  - host: {{ proxyinjector.ingress_host }}.{{ public_domain }}
    http:
      paths:
      - path: /
        backend:
          serviceName: kubehttpbin
          servicePort: 80
  {%- if common.addons.get('nginx', {'enabled': False}).enabled %}
  tls:
  - secretName: kubehttpbin-prod-cert
    hosts:
    - {{ proxyinjector.ingress_host }}.{{ public_domain }}
  {%- endif %}
---