{%- set public_domain = pillar['public-domain'] -%}
{%- from "kubernetes/map.jinja" import charts with context -%}

{%- if common.addons.get('ingress_traefik', {'enabled': False}).enabled %}
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: mailhog-mail
  namespace: mailhog
spec:
  rules:
  - host: {{ charts.mailhog.ingress_host }}.{{ public_domain }}
    http:
      paths:
      - path: /
        backend:
          serviceName: mailhog
          servicePort: 1025
      - path: /dashboard
        backend:
          serviceName: mailhog
          servicePort: 8025
---
{% endif %}

{%- if common.addons.get('ingress_istio', {'enabled': False}).enabled -%}
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: mailhog-mail
  namespace: default
spec:
  gateways:
  - istio-gateway
  hosts:
  - {{ charts.mailhog.ingress_host }}.{{ public_domain }}
  http:
  - match:
    - uri:
        prefix: /
    route:
    - destination:
        host: mailhog.mailhog.svc.cluster.local
        port:
          number: 1025
  - match:
    - uri:
        prefix: /dashboard
    route:
    - destination:
        host: mailhog.mailhog.svc.cluster.local
        port:
          number: 8025
---
{% endif %}
