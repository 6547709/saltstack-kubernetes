{%- set public_domain = pillar['public-domain'] -%}
{%- from "kubernetes/map.jinja" import common with context -%}
{%- from "kubernetes/map.jinja" import charts with context -%}
{%- if common.addons.get('nginx', {'enabled': False}).enabled %}
  {%- set controller = "nginx" -%}
{%- elif common.addons.get('traefik', {'enabled': False}).enabled %}
  {%- set controller = "traefik" -%}
{%- elif common.addons.get('istio', {'enabled': False}).enabled %}
  {%- set controller = "istio" -%}
{%- endif -%}

apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: harbor
  namespace: harbor
  annotations:
    kubernetes.io/ingress.class: {{ controller }}
spec:
  rules:
  - host: {{ charts.harbor.ingress_host }}.{{ public_domain }}
    http:
      paths:
      - path: /api
        backend:
          serviceName: registry-harbor-ui
          servicePort: 80
      - path: /service
        backend:
          serviceName: registry-harbor-ui
          servicePort: 80
      - path: /v2
        backend:
          serviceName: registry-harbor-ui
          servicePort: 80
      - path: /chartrepo
        backend:
          serviceName: registry-harbor-ui
          servicePort: 80
      - path: /login
        backend:
          serviceName: registry-harbor-ui
          servicePort: 80
      - path: /log_out
        backend:
          serviceName: registry-harbor-ui
          servicePort: 80
      - path: /sendEmail
        backend:
          serviceName: registry-harbor-ui
          servicePort: 80
      - path: /language
        backend:
          serviceName: registry-harbor-ui
          servicePort: 80
      - path: /reset
        backend:
          serviceName: registry-harbor-ui
          servicePort: 80
      - path: /userExists
        backend:
          serviceName: registry-harbor-ui
          servicePort: 80
      - path: /reset_password
        backend:
          serviceName: registry-harbor-ui
          servicePort: 80
      - path: /
        backend:
          serviceName: registry-harbor-ui
          servicePort: 80
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: notary
  namespace: harbor
  annotations:
    kubernetes.io/ingress.class: {{ controller }}
spec:
  rules:
  - host: notary.{{ public_domain }}
    http:
      paths:
      - path: /
        backend:
          serviceName: registry-harbor-notary-server
          servicePort: 4443
---
