{#- Get the `tplroot` from `tpldir` #}
{% from tpldir ~ "/map.jinja" import openebs with context %}

kind: StorageClass
apiVersion: storage.k8s.io/v1
metadata:
  name: mayastor
parameters:
  repl: '{{ openebs.mayastor_nbd_replication }}'
  protocol: 'nbd'
provisioner: io.openebs.csi-mayastor
---
kind: StorageClass
apiVersion: storage.k8s.io/v1
metadata:
  name: mayastor-iscsi
parameters:
  repl: '{{ openebs.mayastor_iscsi_replication }}'
  protocol: 'iscsi'
provisioner: io.openebs.csi-mayastor
---
kind: StorageClass
apiVersion: storage.k8s.io/v1
metadata:
  name: mayastor-nvmf
parameters:
  repl: '{{ openebs.mayastor_nvmf_replication }}'
  protocol: 'nvmf'
provisioner: io.openebs.csi-mayastor