{%- set Token = pillar['kubernetes']['global']['kubelet-token'] -%}

apiVersion: v1
kind: Config
clusters:
- name: local
  cluster:
    server: https://127.0.0.1:6443
    certificate-authority: /etc/kubernetes/ssl/ca.pem
users:
- name: kubelet-bootstrap
  user:
    token: {{ Token }}
contexts:
- context:
    cluster: local
    user: kubelet-bootstrap
  name: default
current-context: default