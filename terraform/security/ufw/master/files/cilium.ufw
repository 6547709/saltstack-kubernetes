# Install into /etc/ufw/applications.d/ and run 'ufw app update' to add cillium
# firewall rules to systems with UFW.  Activate with 'ufw allow flannel'
#
# https://docs.cilium.io/en/stable/install/system_requirements/
#
[cillium-vxlan]
title=Cilium VXLAN
description=Cillium VXLAN overlay mode 
ports=8472/udp

[cillium-geneve]
title=Cilium Geneve
description=Cillium Geneve overlay mode 
ports=6081/udp

[cillium-health]
title=Cilium health
description=Cillium monitoring
ports=4240/tcp