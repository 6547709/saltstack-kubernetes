# Install into /etc/ufw/applications.d/ and run 'ufw app update' to add weave
# firewall rules to systems with UFW.  Activate with 'ufw allow weave'
[weave]
title=weave
description=Weave Net communications
ports=6783/tcp|6783,6784/udp

[weave-metrics]
title=weave-metrics
description=Weave Net monitoring
ports=6781,6782